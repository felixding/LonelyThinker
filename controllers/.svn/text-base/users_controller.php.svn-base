class UsersController extends AppController
{
	var $name = 'Users';
	var $othAuthRestrictions = array('logout', 'preferences');
  
    public function login()
    {
    	if(isset($this->params['data']))
    	{
       		$auth_num = $this->othAuth->login($this->params['data']['User']);
        	$this->set('auth_msg', $this->othAuth->getMsg($auth_num));
    	}
    }
    
    public function logout()
    {
    	$this->othAuth->logout();
    	$this->redirect('/');
    }
    
    /**
     * update the use's preferences
     *
     * @date 2009-04-15
     */
    public function preferences()
    {
    	$this->User->id = $this->othAuth->user('id');
    	$user = $this->User->read();

    	if(!empty($this->data))
    	{	
    		if($this->User->save($this->data))
    		{
    			$this->set('saved', 1);
    			$this->othAuth->updateSession($this->data);
    			
    			$this->render();
    			return;
    		}
    		
    		$user = $this->data;		    		
    	}
    	
    	$this->set('user', $user);
    }
}

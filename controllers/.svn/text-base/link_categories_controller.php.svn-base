class LinkCategoriesController extends AppController
{
	var $name = 'LinkCategories';
	var $scaffold;
	var $othAuthRestrictions = '*';
	
	/**
	 * interface for getting a link category
	 *
	 * @date 2009-04-10
	 */
	public function get($linkCategoryId = 0)
	{
		if(($link = $this->readCache('link')) === false)
		{
			$link = $this->LinkCategory->read(null, $linkCategoryId);
			
			$this->writeCache('links', $link);
		}	

		return $link;
	}
}
